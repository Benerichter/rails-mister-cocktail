<div style="padding: 7vh">
  <%= render 'searchbar' %>
  <div class="container" style="margin-top: 5vh">
    <div class="row">
    <% @cocktails.each do |e|%>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 py-3">
        <%= link_to cocktail_path(e) do%>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path e.photo.key, height: 300, width: 400, crop: :fill %>)">
              <%= e.name %>
            </div>
        <% end %>
      </div>
    <% end %>
    </div>
  </div>
</div>

